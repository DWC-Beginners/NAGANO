

<div class="row" %>
  <div>
    <div>
      <h3><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h3>
    </div>
      <%= form_with model:@customer, local:true do |f| %>
    <table>
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= f.text_field :last_name %></td>
        <td><%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= f.text_field :last_name_kana %></td>
        <td><%= f.text_field :first_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= f.text_field :postal_code %>></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= f.text_field :phone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.text_field :email %></td>
      </tr>
      <!--会員のステータス(退会フラグ？)が有効か退会かで表示を変える-->
      <!--有効か退会かの判別が退会フラグだとわかりにくいかも？-->
      <!--trueだと退会、falseだと有効、デフォルトはfalse-->
      <tr>
        <td>会員ステータス</td>
        <td>
          <label>
            <%= f.radio_button :is_deleted, "false" %>有効
          </label>
        </td>
        <td>
          <label>
            <%= f.radio_button :is_deleted, "true" %>退会
          </label>
        </td>
      </tr>
      <tr>
        <td><%= f.submit "変更を保存", class: "btn btn-primary" %> </td>
      </tr>
    </table>
    <% end %>
  </div>
</div>