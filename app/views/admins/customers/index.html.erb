

<div class="row">
  <!--あとでbootstrapを使ってレイアウトする-->
  <div>
    <div>
      <h3>会員一覧</h3>
      <table>
        <!--theadは会員一覧に表示する物の名称を表示する-->
        <thead>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </thead>
        <!--tbodyは会員を繰り返し表示する-->
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <!--氏名は会員詳細のリンクにしている-->
            <td><%= link_to customer.last_name + customer.first_name admin_customer_path(customer) %></td>
            <td><%= customer.email %> </td>

            <!--会員のステータス(退会フラグ？)が有効か退会かで表示を変える-->
            <!--有効か退会かの判別が退会フラグだとわかりにくいかも？-->
            <!--trueだと退会、falseだと有効、デフォルトはfalse-->
            <td>
              <% if customer.is_deleted %>
                退会
              <% else %>
                有効
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<!--ページングの記述-->
<%= paginate @customers %>