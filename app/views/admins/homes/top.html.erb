<h1>注文履歴一覧</h1>

<table>
  <thead>
    <tr>
      <th>購入時間</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @orders.each do |order| %>
       <td>
         <%= link_to order.created_at, admins_order_path(order.id) %>
       </td>
       <td><%= order.name %></td>
       <td><%= order.order_items.amount %></td>
       <td><%= order.status %></td>
      <% end %>
    </tr>
  </tbody>
</table>
<%= paginate @orders %>

