<div class="container">
  <div class="row">
    <h4 class="col offset-md-1 mb-md-5">ジャンル編集</h4>
  </div>
  <div class="row">
    <div class="col-md-2 offset-md-1 mb-md-5">
      <p>ジャンル名</p>
    </div>
    <div class="col">
      <%= form_with model:@genre,url: admins_genre_path(@genre), local:true do |f| %>
        <%= f.text_field :name %>
        <%= f.submit '変更',class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>


