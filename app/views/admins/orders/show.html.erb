<h1>注文履歴詳細</h1>

<table>
  <tr>
    <td>購入者</td>
    <td><%= link_to @order.customer.last_name.to_s + @order.customer.first.name.to_s, admins_customer_path(@customer) %></td>
  </tr>
  <tr>
    <td>注文日</td>
    <td><%= @order.created_at %></td>
  </tr>
  <tr>
    <td>配送先</td>
    <td><%= @order.postal_code %></td>
    <td><%= @order.address %></td>
  </tr>
  <tr>
    <td>支払方法</td>
    <td><%= @order.payment_method %></td>
  </tr>
  <tr>
    <%= form_with model: @order, url:'/orders', local:true do |f| %>
      <td>注文ステータス</td>
      <td><%= f.select :status, .statuses.keys.to_a, {} %></td>
      <td><%= f.submit "更新" %></td>
    <% end %>
  </tr>
</table>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th制作ステータス></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @order_items.each do |order_item| %>
        <%= form_with model: @order_item, local:true do |f| %>
           <td><%= @order_item.product.name %></td>
           <td><%= @order_item.product.price %></td>
           <td><%= order_item.amount %></td>
           <td><%= order_item.price %></td>
           <td><%= f.select :production_status, .production_statuses.keys.to_a, {} %></td>
           <td><%= f.submit "更新" %></td>
        <% end %>
      <% end %>
    </tr>
  </tbody>
</table>

<table>
  <tr>
    <td>商品合計</td>
    <td><%= @order.total_payment %></td>
  </tr>
  <tr>
    <td>送料</td>
    <td><%= @order.shipping_cost %></td>
  </tr>
  <tr>
    <td>請求金額合計</td>
    <td><%= @order.total_payment.to_i + @order.shipping_cost.to_i %></td>
  </tr>
</table>
