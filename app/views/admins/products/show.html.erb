<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-10">
      <h2 class="customer_title">商品詳細</h2>
        <div class="row">
          <div>
            <%= attachment_image_tag @product, :image, :fill, 200, 200 %>
          </div>
          <div class=col>
            <table class="table">
              <tr>
                <td>商品名</td>
                <td><%= @product.name %></td>
              </tr>
              <tr>
                <td>商品説明</td>
                <td><%= @product.description %></td>
              </tr>
              <tr>
                <td>ジャンル</td>
                <td><%= @product.genre.name %></td>
              </tr>
                <td>税込価格<br>
                (税抜価格)</td>
                
                <td><%= ((@product.price*1.10).to_i).to_s(:delimited) %>&nbsp;(<%= (@product.price).to_s(:delimited) %>)円</td>
              </tr>
              <tr>
                 <td>販売ステータス</td>
                 <td><%= @product.sale_status %></td>
              </tr>
            </table>
            <%= link_to "編集する", edit_admins_product_path(@product), class: 'btn btn-success btn-lg' %>
          </div>
        </div>
　  </div>
  </div>
</div>

            
