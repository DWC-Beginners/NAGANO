<h1>商品詳細</h1>
<%= attachment_image_tag @product, :image %>
<table>
  <tr>
    <td>商品名</td>
    <td><%= @product.name %></td>
  </tr>
  <tr>
    <td>商品説明</td>
    <td><%= @product.description %></td>
  </tr>
  <tr>
    <td>ジャンル</td>
    <td><%= @product.genre.name %></td>
  </tr>
     <td>税込価格
      <br>(税抜価格)
     </td>
     <td><%= @product.price * 1.1 %></td>
     <td>(<%= @product.price %>)</td>
  </tr>
  <tr>
     <td>販売ステータス</td>
     <td><%= @product.sale_status %></td>
  </tr>
  <tr>
     <td><%= link_to "編集する", edit_admins_product_path(@product) %></td>
  </tr>
</table>
