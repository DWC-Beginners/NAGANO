<h1>商品新規登録</h1>
<%= form_with model: @product,url: admins_products_path, local:true do |f| %>
<table>
    <tr>
      <td>商品画像</td>
      <td><%= f.attachment_field :image %></td>
    </tr>
    <tr>
      <td>商品名</td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= f.text_area :description %></td>
    </tr>
    <tr>
      <th>ジャンル</th>
      <th><%= f.select :genre_id, Genre.all.map { |genre| [genre.name, genre.id] }, {include_blank: '選択してください' } %></th>
    </tr>
    <tr>
      <th>税別価格</th>
      <th><%= f.text_field :price %>円</th>
    </tr>
    <tr>
      <th>販売ステータス</th>
      <th>
        <%= f.radio_button :sale_status, "1" %>
        <%= f.label :sale_status, '販売中', value: "1" %>
        <%= f.radio_button :sale_status, "2" %>
        <%= f.label :sale_status, '販売停止中', value: "2" %>
        
      </th>
    </tr>
    <tr>
      <th>
        <%= f.submit'新規登録' %>
      </th>
    </tr>

</table>
<% end %>

