<div class='container'>
  <div class='row'>
    <h4 class="col offset-md-1">商品編集</h4>
  </div>
  <%= form_with model:@product,url:admins_product_path(@product), local:true do |f| %>
  <div class='row mt-md-5'>
    <div class="col-md-2 offset-md-2 ">商品画像</div>
    <div class="col-md-8"><%= f.attachment_field :image %></div>
  </div>
  <div class='row mt-md-3'>
    <div class="col-md-2 offset-md-2">商品名</div>
    <div class="col-md-8"><%= f.text_field :name, :size=> 40 %></div>
  </div>
  <div class='row mt-md-3'>
    <div class="col-md-2 offset-md-2">商品説明</div>
    <div class="col-md-8"><%= f.text_area :description, size: "39×10" %></div>
  </div>
  <div class='row mt-md-3'>
    <div class="col-md-2 offset-md-2">ジャンル</div>
    <div class="col-md-8"><%= f.select :genre_id, Genre.all.map { |genre| [genre.name, genre.id] }, {include_blank: '選択してください' } %></div>
  </div>
  <div class='row mt-md-3'>
    <div class="col-md-2 offset-md-2">税別価格</div>
    <div class="col-md-8"><%= f.text_field :price %></div>
  </div>
  <div class='row mt-md-3'>
    <div class="col-md-2 offset-md-2">販売ステータス</div>
    <div class="col-md-4">
      <%= f.radio_button :sale_status, "販売中" %>
      <%= f.label :sale_status, '販売中', value: "販売中" %>
      <%= f.radio_button :sale_status, "販売停止中" %>
      <%= f.label :sale_status, '販売停止中', value: "販売停止中" %>
    </div>
  </div>
  <div class="row mt-md-3">
    <div class="col-auto mx-auto">
      <%= f.submit'変更を保存', class: 'btn btn-success submit_botton' %>
    </div>
  </div>
  <% end %>
</div>