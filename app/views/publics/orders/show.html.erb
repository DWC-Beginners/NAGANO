<h1>注文履歴詳細</h1>


<h3>注文情報</h3>
<table>
  <tr>
    <td>注文日</td>
    <td><%= @order.created_at.strftime("%Y年%m月%d日") %></td>
  </tr>
  <tr>
    <td>配送先</td>
    <td>
      <%= @order.postal_code %>
      <%= @order.address %>
      <%= @order.customer.last_name.to_s + order.customer.first.name.to_s %>
    </td>
  </tr>
  <tr>
    <td>支払方法</td>
    <td><%= @order.payment_method %></td>
  </tr>
  <tr>
    <td>ステータス</td>
    <td><%= @order.status %></td>
  </tr>
</table>

<h3>請求情報</h3>
<table>
  <tr>
    <td>商品合計</td>
    <td><%= @order.total_payment %></td>
  </tr>
  <tr>
    <td>配送料</td>
    <td><%= @order.shipping_cost %></td>
  </tr>
  <tr>
    <td>ご請求額</td>
    <td><%= @order.total_payment.to_i + @order.shipping_cost.to_i %></td>
  </tr>
</table>

<h3>注文内容</h3>
<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @order_items.each do |order_item| %>
      　　<td><%= order_item.product.name %></td>
      　　<td><%= order_item.product.price %></td>
      　　<td><%= order_item.amount %></td>
      　　<td><%= order_item.price %></td>
      <% end %>
    </tr>
  </tbody>
</table>
