<h1>注文情報確認</h1>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @order_items.each do |order_item| %>
        <td>
          
          <%= order_item.product.name %>
        </td>
        <td><%= order_item.product.price %></td>
        <td><%= order_item.amount %></td>
        <td><%= order_item.price %></td>
      <% end %>
    </tr>
  </tbody>
</table>

<table>
  <tr>
    <td>送料</td>
    <td><%= @order.shipping_cost %></td>
  </tr>
  <tr>
    <td>商品合計</td>
    <td><%= @order.total_payment %></td>
  </tr>
  <tr>
    <td>請求額</td>
    <td><%= @order.total_payment.to_i + @order.shipping_cost.to_i %></td>
  </tr>
</table>

<table>
  <tr>
    <td>支払方法</td>
    <td><%= @order.payment_method %></td>
  </tr>
  <tr>
    <td>お届け先</td>
    <td>
      <%= @order.postal_code %>
      <%= @order.address %><br>
      <%= @order.customer.last_name.to_s + @order.customer.first.name.to_s%>
    </td>
  </tr>
</table>

