<h1>注文履歴一覧</h1>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <td><%= order.created_at.strftime("%Y年%m月%d日") %></td>
      <td>
        <%= order.postal_code %>
        <%= order.address %>
        <%= order.customer.last_name.to_s + order.customer.first.name.to_s %>
      </td>
      <td><%= order.order_items.product_id %></td>
      <td><%= order.total_payment %></td>
      <td><%= order.status %></td>
      <td><%= link_to "表示する", order_path(order.id)%></td>
      <td><%= button_to "表示する", order_path(order.id), method: :post, class: "register-blue-btn" %></td>
    <% end %>
  </tbody>
</table>