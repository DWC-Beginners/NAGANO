
<div class="container">
  <div class="row">
    <div>
      <h3>マイページ</h3>
      <main>
        <!--登録情報と編集するのdiv-->
        <div>
          <tr>
            <td>登録情報</td>
            <td><%= link_to "編集する", edit_customer_path(customer),class: 'btn btn-default' %></td>
          </tr>
        </div>
        <!--会員情報-->
        <table>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>カナ</td>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </table>
        <div>
          <tr>
            <td>配送先</td>
            <td><%= link_to "一覧を見る", deliveries_path(delivery), class: 'btn btn-default' %></td>
          </tr>
          <tr>
            <td>注文一覧</td>
            <td><%= link_to "一覧を見る", orders(order), class: 'btn btn-default' %></td>
          </tr>
        </div>
      </main>
    </div>
  </div>
</div>
