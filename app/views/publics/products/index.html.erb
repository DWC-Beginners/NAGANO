<div class="container">
  <div class="row justify-content-md-left">
    <h4 class="col offset-md-1"><strong>商品一覧</strong></h4>
  </div>
  <div class="row">
    <% @products.each do |product| %>
    <div class="col-md-2 offset-md-1">
      <%= link_to product_path (product.id) do %>
        <%= attachment_image_tag product, :image, :fill, 200, 200 %>
      <% end %>
      <p><%= product.name %></p>
      <p>¥<%= product.price.to_s(:delimited) %></p>
    </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-auto mx-auto"><%= paginate @products %></div>
  </div>
</div>