<h1>配送先編集</h1>

<%= form_with model: @delivery, local:true do |f| %>
  <table>
    <tr>
      <td>郵便番号</td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td>宛名</td>
      <td>
        <%= f.text_field :name %>
        <%= f.submit '変更内容を保存' %>
      </td>
    </tr>
  </table>
<% end %>