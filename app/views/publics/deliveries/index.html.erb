<h1>配送先/登録一覧画面</h1>
<%= form_with model: @delivery, local:true do |f| %>
<table>
  <tr>
    <td>郵便番号</td>
    <td><%= f.text_field :postal_code %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= f.text_field :address %></td>
  </tr>
  <tr>
    <td>宛名</td>
    <td>
      <%= f.text_field :name %>
      <%= f.submit '新規登録' %>
    </td>
  </tr>
</table>
<%= form_with model: @list, url:'/todolists', local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @deliveries.each do |delivery| %>.
        <td><%= delivery.postal_code %></td>
        <td><%= delivery.address %></td>
        <td><%= delivery.name %></td>
        <td>
          <%= button_to "編集する", edit_deliver_path(@delivery.id), method: :patch, class: "register-blue-btn" %>
          <%= button_to "削除する", destroy_deliver_path(@delivery.id), method: :delete, class: "register-red-btn" %>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>