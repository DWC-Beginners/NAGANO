<div class='container'>
  <div class='row mb-5 offset-1'>
    <h4>配送先登録/一覧</h4>
  </div>

  <div class='row mb-5'>
    <%= form_with model: @address, local:true do |f| %>
    <table>
        <tr>
          <td>郵便番号(ハイフンなし)</td>
          <td><%= f.text_field :postal_code %></td>
          <td></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
          <td></td>
        </tr>
        <tr>
          <td>宛名</td>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit '新規登録', class: 'btn btn-success btn-sm' %></td>
        </tr>
      </table>
    <% end %>
  </div>

  <div class='row'>
    <div class="col-md-9">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tb>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= button_to "編集する", edit_address_path(@address.id), method: :patch, class: "register-blue-btn" %>
                <%= button_to "削除する", destroy_address_path(@address.id), method: :delete, class: "register-red-btn" %>
              </td>
            </tr>
          <% end %>
        </tb>
      </table>
    </div>
  </div>
</div>